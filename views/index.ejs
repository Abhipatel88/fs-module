<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white" >
            <form action="/create" method="post">
                <input name="title" class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-700" type="text" placeholder="Enter the Title ">
                <textarea name="details" class="block w-full rounded-md outline-none px-5 mt-2 py-2 bg-zinc-700 resize-none"  name="" placeholder="Write Your Task" id=""></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-3 rounded-md" type="submit" value="Create">
            </form>
            <div class="tasks flex flex-wrap gap-5">
                <% if (files.length > 0) { %>
                    <% files.forEach(function (value) { %>
                        <div class="task  w-72 px-3 py-4 bg-zinc-800 p-10 mt-10 rounded-md text-white">
                            <h1 class="text-white text-3xl tracking-tighter ""><%= value %></h1>
                            <div class="flex w-full justify-between items-center mt-2">

                                <a class="text-blue-600 inline-block " href="/files/<%= value %>">Read More</a>
                                <a class="text-zinc-500" href="/edit/<%=value  %>">Edit</a>
                            </div>
                        </div>
                    
                        <% }); %>
               <% } else{ %>
                <h2 class="text-zinc-300">NO TASK YET</h2>

               <% } %>
                
         
               

            </div>
        </div>
    </div>
    
</body>
</html>